  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const wishlistContainer = document.querySelector(".wishlist_row");
      {% for product in collections.all.products %}
      var wishlist_Id = localStorage.getItem("wishID-{{ product.id }}");
      if (wishlist_Id == "{{ product.id }}") {
        const wishgridHTML = `
          <div class="wishlist-grid">
          <span id="removeIcon" class="remove-{{ product.id }}">XRemove</span>
            <a href="{{ product.url }}">
              <img src="{{ product.featured_image | image_url: width: , height:  }}" alt="{{ product.title }}">
            </a>
            <h4>{{ product.title }}</h4>
            <p>{{ product.price | money }}</p>
          </div>
        `;
        wishlistContainer.insertAdjacentHTML("beforeend", wishgridHTML);
          const removeIcons = document.querySelector(".remove-{{ product.id }}");
          removeIcons.addEventListener('click', function (e) {
          e.target.closest(".wishlist-grid").remove();
          localStorage.removeItem('wishID-{{ product.id }}');
        });
      }
    {% endfor %}
  });
  </script>

