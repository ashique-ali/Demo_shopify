{% comment %}
  <section class="collection-tabs">
    <!-- Tabs -->
    <div class="tabs-wrapper">
      {% for block in section.blocks %}
        <button
          class="tab-btn {% if forloop.first %}active{% endif %}"
          data-tab="tab-{{ block.id }}"
        >
          {{ block.settings.tab_title }}
        </button>
      {% endfor %}
    </div>

    <!-- Tab Content -->
    {% for block in section.blocks %}
      {% assign collection = block.settings.collection %}
      <div
        class="tab-content {% if forloop.first %}active{% endif %}"
        id="tab-{{ block.id }}"
      >
        {% if collection != blank %}
          {% for product in collection.products limit: section.settings.products_limit %}
            <div class="product-card">
              <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.title }}">
              <h4>{{ product.title }}</h4>
              <p>{{ product.price | money }}</p>
            </div>
          {% endfor %}
        {% else %}
          <p>No collection selected</p>
        {% endif %}
      </div>
    {% endfor %}
  </section>

  {% schema %}
  {
    "name": "Collection Tabs (Blocks)",
    "settings": [
      {
        "type": "range",
        "id": "products_limit",
        "label": "Products per tab",
        "min": 2,
        "max": 12,
        "step": 1,
        "default": 4
      }
    ],
    "blocks": [
      {
        "type": "tab",
        "name": "Collection Tab",
        "settings": [
          {
            "type": "text",
            "id": "tab_title",
            "label": "Tab Title",
            "default": "Tab Title"
          },
          {
            "type": "collection",
            "id": "collection",
            "label": "Select Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collection Tabs (Dynamic)",
        "blocks": [{ "type": "tab" }, { "type": "tab" }, { "type": "tab" }]
      }
    ]
  }
  {% endschema %}
{% endcomment %}
{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<script src="{{ 'custom-collection-tabs.js' | asset_url }}" defer></script>

<section class="collection-tabs">
  <div class="tabs-wrapper">
    <button class="tab-btn active" data-tab="tab1">
      {{ section.settings.tab1_title }}
    </button>
    <button class="tab-btn" data-tab="tab2">
      {{ section.settings.tab2_title }}
    </button>
    <button class="tab-btn" data-tab="tab3">
      {{ section.settings.tab3_title }}
    </button>
  </div>

  <div class="tab-content active" id="tab1">
    {% for product in section.settings.collection1.products limit: section.settings.products_limit %}
      {% render 'card-product',
        card_product: product,
        media_aspect_ratio: section.settings.image_ratio,
        image_shape: section.settings.image_shape,
        show_secondary_image: section.settings.show_secondary_image,
        show_vendor: section.settings.show_vendor,
        show_rating: section.settings.show_rating,
        quick_add: section.settings.quick_add,
        section_id: section.id
      %}
    {% else %}
      <p>No products found</p>
    {% endfor %}
  </div>

  <div class="tab-content" id="tab2">
    {% for product in section.settings.collection2.products limit: section.settings.products_limit %}
       {% render 'card-product',
        card_product: product,
        media_aspect_ratio: section.settings.image_ratio,
        image_shape: section.settings.image_shape,
        show_secondary_image: section.settings.show_secondary_image,
        show_vendor: section.settings.show_vendor,
        show_rating: section.settings.show_rating,
        quick_add: section.settings.quick_add,
        section_id: section.id
      %}
    {% else %}
      <p>No products found</p>
    {% endfor %}
  </div>

  <div class="tab-content" id="tab3">
    {% for product in section.settings.collection3.products limit: section.settings.products_limit %}
     {% render 'card-product',
        card_product: product,
        media_aspect_ratio: section.settings.image_ratio,
        image_shape: section.settings.image_shape,
        show_secondary_image: section.settings.show_secondary_image,
        show_vendor: section.settings.show_vendor,
        show_rating: section.settings.show_rating,
        quick_add: section.settings.quick_add,
        section_id: section.id
      %}
    {% else %}
      <p>No products found</p>
    {% endfor %}
  </div>
</section>

<style>
  .collection-tabs {
    padding: 40px 0;
  }

  .tabs-wrapper {
    display: flex;
    justify-content: center;
    background: #fff;
    border-radius: 30px;
    border: 1px solid #ddd;
    max-width: 450px;
    margin: auto;
    overflow: hidden;
  }

  .tab-btn {
    flex: 1;
    padding: 12px;
    border: none;
    background: transparent;
    color: #000;
    cursor: pointer;
    font-weight: 600;
  }

  .tab-btn.active {
    background: green;
    color: #fff;
  }

  .tab-content {
    display: none;
    margin-top: 30px;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
  }

  .tab-content.active {
    display: grid;
  }

  .product-card {
    border: 1px solid #eee;
    padding: 15px;
    text-align: center;
  }

  .product-card img {
    width: 100%;
    height: auto;
  }
</style>

